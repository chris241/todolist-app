<p>
<a class="btn-success top-right" data-method="post" href="/emails" data-remote=true >Recevoir un e-mail</a>
  </p>
<table class="table table-bordered" >
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Listes des emails  </th>
      <th scope="col">Emails sélectionnés </th>
  
    </tr>
  </thead>
  <tbody id="mail">
      <%@emails.each do |email|%>
    <tr id="<%=email.id%>">
      <th scope="row"id ="id"><%=email.id%></th>
      <td class="emailobjet"><%= link_to "#{email.object}", email_path(email.id), remote: true %></td>
      <td class= "emailbody"><%=email.body%></td>
    </tr>
    <%end%>
  </tbody>
</table>
